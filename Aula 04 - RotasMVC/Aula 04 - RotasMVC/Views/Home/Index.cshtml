@model IEnumerable<Aula_04___RotasMVC.Models.Noticia>
@{
    ViewBag.Title = "Index";
}

<h2>Rotas em MVC ASP NET</h2>

<div>
    <ul>
        @foreach (string item in ViewBag.Categorias)
        {
            <li>@Html.ActionLink(item, "MostraCategoria", "Home", new {@Categoria = item}, null)</li>
            
        }
    </ul>
</div>
    
<div>
    <ul>
        @foreach (var item in Model)
        {
            <li>
                @Html.ActionLink(item.Titulo, "MostrarNoticia", "Home", new
                {
                    @noticiaId = item.NoticiaId,
                    @categoria = item.Categoria.ToLower(),
                    @titulo = item.Titulo.ToLower()
                }, null)
                <em>@Html.DisplayFor(modelItem => item.Categoria)</em>
            </li>
        }
    </ul>
</div>
<div>
    @Html.ActionLink("Todas as Noticias", "todasNoticias" , "Home")
</div>
